<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.proyects.any? %>
      <h3>Proyects (<%= @user.proyects.count %>)</h3>
      <ol class="proyects">
        <%= render @proyects %>
      </ol>
      <%= will_paginate @proyects %>
    <% end %>
  </div>
</div>