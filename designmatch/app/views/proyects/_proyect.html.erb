<li id="proyect-<%= proyect.id %>">
  <span class="name"><%= link_to proyect.name, proyect %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(proyect.created_at) %> ago.
    <% if current_user?(proyect.user) %>
      <%= link_to "delete", proyect, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>